{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://meta-model.app/schemas/shadow-quantifier-patient-confirm.schema.json",
  "title": "Shadow Quantifier Patient Confirm",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "reply_type",
    "reply_text",
    "correction_hint",
    "confidence"
  ],
  "properties": {
    "reply_type": {
      "type": "string",
      "enum": [
        "yes",
        "partial",
        "no"
      ]
    },
    "reply_text": {
      "type": "string",
      "minLength": 2,
      "maxLength": 200
    },
    "correction_hint": {
      "type": [
        "string",
        "null"
      ],
      "maxLength": 160
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}
