{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://meta-model.app/schemas/sqhcel-dialogue-pack.schema.json",
  "title": "SQHCEL Dialogue Pack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "locale",
    "dialogues"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "locale": {
      "type": "string",
      "enum": [
        "he",
        "en"
      ]
    },
    "dialogues": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "topic",
          "tags",
          "difficulty",
          "lines",
          "final_sentence",
          "suggested_shadow_quantifier",
          "suggested_exception"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40
          },
          "topic": {
            "type": "string",
            "enum": [
              "work",
              "couples",
              "anxiety",
              "shame",
              "parenting",
              "faith",
              "money"
            ]
          },
          "tags": {
            "type": "array",
            "minItems": 1,
            "maxItems": 6,
            "items": {
              "type": "string",
              "minLength": 2,
              "maxLength": 40
            }
          },
          "difficulty": {
            "type": "integer",
            "minimum": 1,
            "maximum": 3
          },
          "lines": {
            "type": "array",
            "minItems": 4,
            "maxItems": 6,
            "items": {
              "type": "string",
              "minLength": 4,
              "maxLength": 140
            }
          },
          "final_sentence": {
            "type": "string",
            "minLength": 6,
            "maxLength": 180
          },
          "suggested_shadow_quantifier": {
            "type": "string",
            "minLength": 2,
            "maxLength": 40
          },
          "suggested_exception": {
            "type": "string",
            "minLength": 6,
            "maxLength": 180
          }
        }
      }
    }
  }
}
